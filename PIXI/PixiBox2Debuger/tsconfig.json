{
  "compilerOptions": {
    "target": "es5",
    "types": ["reflect-metadata", "box2d", "pixi.js"],
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true  
  }
}